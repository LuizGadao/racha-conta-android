node {

    // 1) Compile Stage

    stage 'Compile'
    bat "./gradlew clean compileReleaseSources"

    // 2) Tests Stage

    stage 'Tests'
    bat "./gradlew testRelease"

    // 3) Assemble Stage

    stage 'Assemble'
    bat "./gradlew assembleRelease"

    // 4) Publish Stage

    stage 'Publish'
    bat "./gradlew publishApkRelease"
}